<%= form_for(@job) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :title, placeholder: "Fill in your title here..." %>
		<%= f.text_area :company, placeholder: "Fill in your company here..." %>
		<%= f.text_area :description, placeholder: "Fill in your description here..." %>
	</div>
	<%= f.submit "Add", class: "btn btn-large btn-primary" %>
<% end %>